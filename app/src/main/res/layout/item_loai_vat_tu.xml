<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    style="@style/ItemStyle"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- Tên loại vật tư -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📦 Tên loại vật tư: "
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/tenloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thiết bị văn phòng"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Mô tả -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📝 Mô tả: "
            android:textSize="14sp"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/mota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các thiết bị như máy in, máy scan"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Số lượng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔢 Số lượng: "
            android:textSize="14sp"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Ngày cập nhật -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Cập nhật gần nhất: "
            android:textSize="14sp"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/ngaycapnhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/04/2025"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Hãng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏷️ Hãng: "
            android:textSize="14sp"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/hang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canon"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Nút Sửa - Xóa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🛠️ Sửa"
            android:textSize="14sp"
            android:backgroundTint="#BBBBBB"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🗑️ Xóa"
            android:textSize="14sp"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
