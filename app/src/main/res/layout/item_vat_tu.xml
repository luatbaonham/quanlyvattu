<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="40dp"
    app:cardBackgroundColor="@color/material_cyan"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tv_tieude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Vật tư 1"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF000000"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/vattu"/>

        <TextView
            android:id="@+id/tv_mavattu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã vật tư: VT001"
            android:textSize="16sp"
            android:textColor="#FF000000"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tv_tenvattu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên vật tư: Máy khoan"
            android:textSize="16sp"
            android:textColor="#FF000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_loai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại: Dụng cụ sửa chữa"
            android:textSize="16sp"
            android:textColor="#FF000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_slton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng tồn: 150"
            android:textSize="16sp"
            android:textColor="#FF000000"
            android:layout_marginBottom="8dp"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>