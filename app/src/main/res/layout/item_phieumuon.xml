<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="8dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvMaPhieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã phiếu: 123"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/tvNguoiMuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người mượn: ndtien142"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng: PHÒNG QUẢN TRỊ"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvNgayTao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày tạo: 2025-06-03"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvSoLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng SL: 5"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Đang mượn"
            android:textSize="14sp"
            android:textColor="@color/teal_700"
            android:layout_marginTop="6dp"
            android:background="@drawable/status_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
