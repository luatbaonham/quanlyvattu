                android:layout_height="wrap_content"
                android:text="沒 Mﾃ｣ ki盻ブ: "
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextColor"/>
            <TextView
                android:id="@+id/tvIdKieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextColor"/>
        </LinearLayout>

        <!-- Tﾃｪn ki盻ブ -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洫ｾ Tﾃｪn ki盻ブ: "
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextColor"/>
            <TextView
                android:id="@+id/tvTenKieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mﾃ｡y tﾃｭnh"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextColor"/>
        </LinearLayout>

        <!-- Mﾃｴ t蘯｣ -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沒 Mﾃｴ t蘯｣: "
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextColor"/>
            <TextView
                android:id="@+id/tvMoTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mﾃ｡y tﾃｭnh vﾄハ phﾃｲng"
                android:textSize="16sp"
