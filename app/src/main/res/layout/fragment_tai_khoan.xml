<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản của tôi"
        android:textSize="20sp"
        android:textColor="#B00000"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#FFF9DB"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Thông tin người dùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:background="@drawable/cell_border"
        android:clipToPadding="false"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_user"
            android:background="@drawable/circle_background"
            android:padding="4dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textColor="#B00000"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin@daihocx.edu.vn"
                android:layout_marginTop="5dp"
                android:textColor="#666666"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai trò: Admin"
                android:layout_marginTop="5dp"
                android:textColor="#666666"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản"
        android:textSize="18sp"
        android:padding="12dp"
        android:textStyle="bold"/>
    <!-- Các chức năng -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF9DB"
        android:elevation="2dp">

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>

        <TextView
            android:id="@+id/btnHoSo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hồ sơ cá nhân"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>

        <TextView
            android:id="@+id/btnDoiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>

        <TextView
            android:id="@+id/btnQuanLyBanQuyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý bản quyền"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnDangXuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Đăng xuất"
        android:textColor="@color/white"
        android:backgroundTint="@color/whatsapp_green"
        android:layout_marginTop="200dp"
        android:textSize="16sp" />
</LinearLayout>
