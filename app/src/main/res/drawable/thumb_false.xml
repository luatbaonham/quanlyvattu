<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bo tròn viền trắng -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dp" android:color="@color/gradient_blue_start"/>
        </shape>
    </item>

    <!-- Icon sáng -->
    <item
        android:drawable="@drawable/light_mode"
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"/>
</layer-list>
